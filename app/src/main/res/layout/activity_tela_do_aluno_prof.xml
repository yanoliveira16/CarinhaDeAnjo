<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gabrielvilarouca.carinhadeanjo.tela_do_aluno_prof">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/hgf1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="75dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/new_folder" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="bottom|center_horizontal"
                android:text="AGENDA"
                android:textSize="11sp" />

            <Button
                android:id="@+id/button17"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:onClick="agenda_click" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="55dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="75dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/new_chat" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="bottom|center_horizontal"
                android:text="CHAT"
                android:textSize="11sp" />

            <Button
                android:id="@+id/button5"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:onClick="chat_click" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="55dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="75dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/new_check" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="bottom|center_horizontal"
                android:text="SALVAR"
                android:textSize="11sp" />

            <Button
                android:id="@+id/button6"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:onClick="enviar" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/turma3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_light"
        android:gravity="center"
        android:text="Carregando..."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView31" />

    <FrameLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/new_view" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="bottom|center_horizontal"
            android:text="INFOS"
            android:textSize="11sp" />

        <Button
            android:id="@+id/button24"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:onClick="ve_emailesenha" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/new_profile" />

    <EditText
        android:id="@+id/recado_profis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/hgf1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turma3" />

    <ImageView
        android:id="@+id/hgf1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fundoum"
        tools:visibility="invisible" />

    <ProgressBar
        android:id="@+id/hgf2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>