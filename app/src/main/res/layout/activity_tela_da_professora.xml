<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gabrielvilarouca.carinhadeanjo.tela_da_professora">

    <Button
        android:id="@+id/sair6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/environment"
        android:onClick="novo_feed"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sair4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/logout"
        android:onClick="sair_click2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/imagem_um" />

    <Button
        android:id="@+id/btn_avi_profe"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click_avi_profe"
        android:text="SEM AVISO"
        android:textColor="#770000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servidor_msg2" />

    <TextView
        android:id="@+id/servidor_msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-"
        android:textColor="#FFC107"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_prof" />

    <ScrollView
        android:id="@+id/scfeed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_avi_profe">

        <LinearLayout
            android:id="@+id/linear_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="75dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/calendar" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="75dp"
                android:layout_height="70dp"

                android:gravity="bottom|center_horizontal"
                android:text="AGD. TURMA"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button9"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:onClick="agenda_turma" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="55dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="75dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/mortarboard" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="75dp"
                android:layout_height="70dp"

                android:gravity="bottom|center_horizontal"
                android:text="ALUNOS"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button7"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:onClick="tela_de_alunosClick" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="55dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="75dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/exam" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="75dp"
                android:layout_height="70dp"

                android:gravity="bottom|center_horizontal"
                android:text="PDF's"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button20"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:onClick="pdf_open" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="55dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="75dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/warning" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="75dp"
                android:layout_height="70dp"

                android:gravity="bottom|center_horizontal"
                android:text="AVISO"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button8"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:onClick="gerenciar_click" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/turma2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:text="Carregando..."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView26" />

    <TextView
        android:id="@+id/nome_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Carregando..."
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turma2" />

</androidx.constraintlayout.widget.ConstraintLayout>